<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.velvetPearl.lottery.fragments.LotteryHome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:columnCount="4"
            android:rowCount="4">

            <TextView
                android:text="@string/lottery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lotteryhome_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_row="0"
                android:layout_columnSpan="4"
                android:layout_gravity="center_horizontal"
                android:textSize="27sp" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lotteryhome_row1_padding"
                android:layout_row="1"
                android:layout_columnSpan="4" />

            <TextView
                android:text="@string/lotteryhome_number_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lotteryhome_num_range"
                android:layout_row="2"
                android:layout_column="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="15dp"
                android:textSize="26sp" />
            <TextView
                android:text="Bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lotteryhome_num_range_var"
                android:layout_row="2"
                android:layout_column="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginRight="15dp"
                android:textSize="26sp" />
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
